{
  "manifest_version": 3,
  "name": "SwiftCopy - Smart Message Template Manager",
  "version": "1.0.5",
  "description": "Quickly access and copy your saved messages with a simple 's' shortcut. Select text, press 's', and instantly search through your categorized message templates. Perfect for customer support, sales, and any role that requires quick access to frequently used responses.",
  "icons": {
    "16": "/assets/icon.png",
    "48": "/assets/icon.png",
    "128": "/assets/icon.png"
  },
  "action": {
    "default_popup": "./src/options/index.html",
    "default_icon": {
      "16": "/assets/icon.png",
      "48": "/assets/icon.png",
      "128": "/assets/icon.png"
    }
  },
  "permissions": ["storage", "clipboardWrite"],
  "background": {
    "service_worker": "/src/background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://google.com/search*", "*://*.google.com/search*"],
      "js": ["/src/content/content.js"],
      "css": ["/src/content/content.css"],
      "run_at": "document_idle",
      "world": "ISOLATED"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "src/content/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
